{
  "name": "focal-deploy",
  "version": "2.0.0",
  "description": "Complete AWS deployment automation with wizard-based setup",
  "main": "bin/focal-deploy.js",
  "bin": {
    "focal-deploy": "./bin/focal-deploy.js"
  },
  "pkg": {
    "scripts": [
      "bin/**/*.js",
      "lib/**/*.js"
    ],
    "assets": [
      "templates/**/*",
      "config/**/*",
      "docs/**/*"
    ],
    "targets": [
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "build": {
    "productName": "Focal Deploy",
    "appId": "com.focaldeploy.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "bin/**/*",
      "lib/**/*",
      "templates/**/*",
      "config/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  },
  "scripts": {
    "build:pkg": "pkg . --config package-config.json",
    "build:electron": "electron-builder",
    "build:all": "npm run build:pkg && npm run build:electron",
    "package:macos": "pkg . --targets node18-macos-x64,node18-macos-arm64 --out-path dist/macos",
    "package:linux": "pkg . --targets node18-linux-x64,node18-linux-arm64 --out-path dist/linux",
    "package:windows": "pkg . --targets node18-win-x64 --out-path dist/windows",
    "package:all": "npm run package:macos && npm run package:linux && npm run package:windows",
    "prepare:release": "npm run test && npm run package:all"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}